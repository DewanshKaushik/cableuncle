<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate New Complaint"
            android:textColor="@color/blackcolor"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_background"
            android:hint="Subsriber ID:"
            android:singleLine="true"
            android:padding="15dp"
            android:textColorHighlight="@color/blackcolor"
            android:textColorHint="@color/blackcolor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_background"
            android:hint="Mobile Number"
            android:padding="15dp"
            android:singleLine="true"

            android:textColorHighlight="@color/blackcolor"
            android:textColorHint="@color/blackcolor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_background"
            android:hint="Complaint Type"
            android:padding="15dp"
            android:singleLine="true"

            android:textColorHighlight="@color/blackcolor"
            android:textColorHint="@color/blackcolor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:singleLine="true"

            android:background="@drawable/edittext_background"
            android:hint="Complaint Duration(in days)"
            android:padding="15dp"
            android:textColorHighlight="@color/blackcolor"
            android:textColorHint="@color/blackcolor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_background"
            android:hint="Date (auto fetch)"
            android:padding="15dp"
            android:textColorHighlight="@color/blackcolor"
            android:singleLine="true"

            android:textColorHint="@color/blackcolor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edittext_background"
            android:gravity="top"
            android:hint="Remarks"
            android:maxLines="5"
            android:padding="15dp"
            android:textColorHighlight="@color/blackcolor"
            android:textColorHint="@color/blackcolor" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@color/redColor"
            android:padding="15dp"
            android:text="Submit"
            android:onClick="goToNext"
            android:textColor="@color/whitecolor"
            android:textSize="25dp" />

      <!--  <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">
        </ListView>-->

    </LinearLayout>

    </ScrollView>

</LinearLayout>